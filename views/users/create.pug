extends ../layouts/common.pug

block content
    h1 Create User
    if errors 
        .alert.alert-danger= errors
    form(action="/users/create" method="POST")
        .form-control
            label(for="name") Name
            input#names.form-control(type="text" ,name="name", value= values ? values.name : '') 
            br
            label Phone
            input(type="text" , name="phone",class = "form-control",value= values ? values.phone : '')
            br
            button(type="submit",class="btn btn-success")